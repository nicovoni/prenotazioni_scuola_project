# =========================
# Branding e scuola
# =========================
SCHOOL_NAME="Istituto Statale di Istruzione Superiore di Follonica"
AUTHOR="Sistema sviluppato da Nicola Cantalupo"
SCHOOL_EMAIL_DOMAIN=isufol.it

# =========================
# Risorse disponibili
# =========================
NUM_LABORATORI=5
NUM_NOTEBOOK=20
NUM_IPAD=15

# =========================
# Configurazione carrelli
# =========================
CART_IPAD_TOTAL=25
CART_NOTEBOOK_TOTAL=30

# =========================
# Regole prenotazione
# =========================
BOOKING_START_HOUR=08:00
BOOKING_END_HOUR=18:00
GIORNI_ANTICIPO_PRENOTAZIONE=2
DURATA_MINIMA_PRENOTAZIONE_MINUTI=30
DURATA_MASSIMA_PRENOTAZIONE_MINUTI=180

# =========================
# Altre personalizzazioni
# =========================
# (aggiungi qui altre variabili se necessario)

# =========================
# Server & deploy
# =========================
DJANGO_SECRET_KEY=supersegreto
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (esempio usando Supabase/Postgres)
# DATABASE_URL=postgresql://<SUPABASE_USER>:<SUPABASE_PASSWORD>@<SUPABASE_HOST>:5432/<SUPABASE_DB>

# =========================
# Email / SMTP (configura per produzione)
# =========================
# Esempio per Gmail: attenzione alle policy di Google (consigliato usare un account SMTP dedicato o il servizio dell'istituto)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@isufol.it
EMAIL_HOST_PASSWORD=

# Indirizzo mittente usato come FROM nelle email inviate dal sistema
DEFAULT_FROM_EMAIL=noreply@isufol.it

# Per sviluppo locale: imposta DJANGO_DEBUG=True per usare il console email backend (mostra le email nella console)